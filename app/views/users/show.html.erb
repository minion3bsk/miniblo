<% if @user.id == current_user.id %>
  <p><%= current_user.username %>さんのマイページ</p>
<% else %>  
  <p><%= @user.username %>さん</p>
<% end %>  

<% if @user.image? %>
    <%= image_tag @user.image.url %>
<% end %>

<% @articles.each do |article| %>
  <%= article.title %>
  <div class = "container-item--border">
     <%= article.text %>
  </div>
<% end %>  