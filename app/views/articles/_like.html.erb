<% if user_signed_in? %>
  <% if article.user_liked(current_user.id) %>
    <%= link_to article_like_path(article, article_id: article.id), method: :delete do %>
      <i class="fas fa-heart">
        <span>
          <%= article.like_count %>
        </span>
      </i>
    <% end %>
  <% else %>
    <%= link_to  article_likes_path(article), method: :post do %>
      <span>
        <i class="far fa-heart">
          <%= article.like_count %>
        </i>
      </span>
    <% end %>
  <% end %>
<% else %>
  <i class="far fa-heart">
    <span>
        <%= article.like_count %>
    </span>
  </i>
<% end %>