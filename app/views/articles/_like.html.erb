<% if user_signed_in? %>
  <% if article.user_liked(current_user.id) %>
    <%= link_to article_like_path(article, article_id: article.id) do %>
    <% end %>
  <% else %>
    <%= link_to  article_likes_path(article) %>
  <% end %>
<% else %>
  <i class="far fa-heart">
    <span>
        <%= article.like_count %>
    </span>
  </i>
<% end %>